			<% for (var i=0; i < game.players.length; i++) { %>
				if ('<%= i %>' == index) {
					playerName = '<%= game.players[i] %>'
					shots = '<%= gameplayer[i].remainingShots %>'
					score = '<%= gameplayer[i].score %>'
				} 
			<% } %>

			$('.name').html("C'est à <strong>" + playerName + "</strong> de jouer !")
